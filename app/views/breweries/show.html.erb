<div class='container'>
  <div class='text-center'>
    <div class='page-header'>
      <h1><%= @brewery.name %></h1>
      <h3>Street Address: <%= @brewery.street %></h3>
      <h3>City: <%= "#{@brewery.city}, #{@brewery.state}" %></h3>
      <h3>Phone: <%= @brewery.phone %></h3>
      <h3><%= "Website: #{@brewery.website}" if @brewery.website  %></h3>
      <iframe src="https://www.google.com/maps/embed/v1/q?key=#{ENV['GOOGLE_API_KEY']}&center=#{@brewery.latitude},#{@brewery.longitude}" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      <%# <iframe
        width="450"
        height="250"
        frameborder="0" style="border:0"
        referrerpolicy="no-referrer-when-downgrade"
        src="https://www.google.com/maps/embed/v1/MAP_MODE?key=#{ENV[GOOGLE_API_KEY]}&PARAMETERS"
        allowfullscreen>
      </iframe> %>
    </div>
  </div>
</div>
