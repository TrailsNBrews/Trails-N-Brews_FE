<div class='container'>
  <div class='text-center'>
    <div class='page-header'>
    <h1>Search Trails</h1>
      <%= form_with url: trails_path, method: :get, local: true do |form| %>
        <%= form.text_field :name %>
        <%= form.submit "Find Trails" %>
      <% end %>

      <% if params[:name] %>
        <% @trails.each do |trail| %>
          <table class="table">
            <thead>
              <tr>
                <th><%=link_to trail.name, trail_path(trail.id) %></th>
              </tr>
              <tr>
                <th>Test</th>
              </tr>
            </thead>
          </tbody>
        <% end %>
      <% end %>
    </div>
  </div>
</div>