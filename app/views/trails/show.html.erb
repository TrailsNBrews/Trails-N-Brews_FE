<div class='container text-center page-header'>
  <h1><%= @trail.name %></h1>
</div>

<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav">
      <h3>Closest Breweries:</h3>
      <%@breweries.each do |brewery|%>
        <p><%= link_to brewery.name, brewery_path(brewery.id)%></p>
      <% end %>
    </div>
    <div class="col-sm-8 text-left"> 
      <hr>
      <p>Lorem ipsum...</p>
      <h3>Trail length:</h3>

      <iframe
        width="600"
        height="450"
        style="border:0"
        loading="lazy"
        allowfullscreen
        referrerpolicy="no-referrer-when-downgrade"
        src=<%="https://www.google.com/maps/embed/v1/place?key=#{ENV['GOOGLE_API_KEY']}&q=#{@trail.latitude},#{@trail.longitude}" %>>
      </iframe>

    </div>
    <div class="col-sm-2 sidenav">
      <div class="well">
        <p>ADS</p>
      </div>
      <div class="well">
        <p>ADS</p>
      </div>
    </div>
  </div>
</div>