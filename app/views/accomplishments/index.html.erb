<div class='container text-center page-header row'>
  <div class="col-sm-4">
    <h1>Completed Trails</h1>
    <% if current_user%>
      <% @trails.each do |trail| %>
        <% link_to trail.name, trail_path(trail.id) %>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h1>Breweries Visited</h1>
      <% if current_user %>
      <% @breweries.each do |brewery| %>
        <% link_to brewery.name, brewery_path(brewery.id) %>
      <% end %>
    <% end %>
  </div>
</div>